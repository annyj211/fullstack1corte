  <script>
// 1. Sumemos
        var valores = 0;
        var suma = 0;
        for (i = 1; i < 6; i++) {
            valores = parseInt(prompt("Ingrese un número:"));
            while(String(valores)=="NaN"){
                valores= parseInt(prompt("No ingresaste un número. Escribe un número"))
            }
            suma += valores;
        }
        alert("La suma total es: "+ suma);
            
         // 2. Promedio
        var valores = 0;
        var suma = 0;
        for (i = 1; i < 6; i++) {
            valores = parseInt(prompt("Ingrese un número:"));
            while(String(valores)=="NaN"){
                valores= parseInt(prompt("No ingresaste un número. Escribe un número"))
            }
            suma += valores;
        }
        alert("La suma total es: "+ suma + " .El promedio es: "+(suma/5));
        
       //3. Edades
        var edad;
        var mayores = 0;
        while(edad!=0) {
            edad = parseInt(prompt("Ingrese su edad:"));
            while(String(edad)=="NaN"){
                edad= parseInt(prompt("No ingresaste un número. Escribe tu edad"))
            }
            if(edad>17){
                mayores += 1;
            }
        }
        alert("La cantidad de mayores de edad es: "+(mayores));

  </script>  


